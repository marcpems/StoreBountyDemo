<Page
    x:Class="BountyTestApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BountyTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Background="Black">
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="54,68,0,0" 
            Text="Campaign ID:" 
            VerticalAlignment="Top" 
            Foreground="White"/>
        <TextBlock 
            x:Name="CampaignID"
            HorizontalAlignment="Left" 
            Margin="54,98,0,0" 
            Text="working..." 
            VerticalAlignment="Top"
            Foreground="Yellow"/>

        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="54,135,0,0" 
            Text="Is Bounty Eligible:" 
            VerticalAlignment="Top" 
            Foreground="White"/>
        <TextBlock 
            x:Name="BountyEligible"
            HorizontalAlignment="Left" 
            Margin="54,165,0,0" 
            Text="working..." 
            VerticalAlignment="Top"
            Foreground="Yellow"/>
    </Grid>
</Page>
